{% extends 'default-page.twig' %}

{% block script %}
    <script src="{{ uri.media }}js/doc.js"></script>
{% endblock %}

{% block stylesheet %}
    {{ parent()  }}

    <style>
        #header {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 500;
            border-bottom: 1px solid #eee;
        }

        body {
            padding-top: 70px;
        }
    </style>
{% endblock %}

{% block version_switcher %}
    <div id="version-switcher" class="uk-button-dropdown uk-float-right" data-uk-dropdown="">
        <a class="uk-button uk-button-primary" href="{{ uri.base }}documentation/3.x/start/getting-started.html">
            {{ version }} <i class="uk-icon-caret-down"></i>
        </a>

        <div class="uk-dropdown">
            <ul class="uk-nav uk-nav-dropdown">
                <li class="{{ version == '3.x' ? 'uk-active' : '' }}">
                    <a href="{{ uri.base }}{{ helper.doc.getVersionPath(path, '3.x', config) }}">3.x</a>
                </li>

                <li class="{{ version == '2.1' ? 'uk-active' : '' }}">
                    <a href="{{ uri.base }}{{ helper.doc.getVersionPath(path, '2.1', config) }}">2.1</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block submenu %}
    <div class="uk-width-medium-1-4 uk-container-center">
        {% include 'sub-menu.twig' with {'menu': 'documentation', 'version': version} %}
    </div>
{% endblock %}

{% block article_footer %}
    <hr />

    <p class="uk-text-center">
        Help us <a target="_blank" href="https://github.com/ventoviro/ventoviro.github.io/tree/master/.vaseman/entries/{{ path|join('/') }}">improve</a> this document.
    </p>
{% endblock %}
