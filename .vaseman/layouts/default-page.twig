{% extends '_global/html.twig' %}

{% block title %}{{ config.title }} | Windwalker - PHP Rapid Development Framework{% endblock %}

{% block header %}
    <section id="header">

        {% block nav %}
            {% include '_global/header/nav.twig' %}
        {% endblock %}

        <section id="banner" class="container text-center">
            <div class="row">
                <div class="banner-content col-md-10">
                    <h1 class="banner-title">{{ config.title }}</h1>
                </div>
            </div>
        </section>

    </section>
{% endblock %}

{% block body %}
    <section id="main-body" class="container main-block">
        <div class="row">
            <div class="col-md-3">
                {% block submenu %}{% endblock %}
            </div>

            <div class="col-md-9">
                <article class="article-content">
                    {{ content|raw }}
                    {% block article_footer %}{% endblock %}
                </article>
            </div>
        </div>
    </section>
{% endblock %}
